<Window x:Class="PROG6222POE.Semester"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PROG6222POE"
        mc:Ignorable="d"
        Title="Semester" Height="450" Width="800">
    <Grid Background="LightGray">
        <Label x:Name="label" Content="Semester data" HorizontalAlignment="Center" Margin="0,34,0,0" VerticalAlignment="Top" FontFamily="Bahnschrift SemiBold" FontSize="16"/>
        <Label x:Name="label1" Content="Number of weeks" HorizontalAlignment="Left" Margin="206,112,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="semesterWeeks" HorizontalAlignment="Left" Margin="378,120,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="120" />
        <Label x:Name="label2" Content="Start Date" HorizontalAlignment="Left" Margin="206,167,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="startDate" HorizontalAlignment="Left" Margin="378,169,0,0" VerticalAlignment="Top"/>
        <Button x:Name="saveButton" Content="Save" HorizontalAlignment="Left" Margin="300,264,0,0" VerticalAlignment="Top" Click="button_Click"/>
        <Button x:Name="printButton" Content="Print List" HorizontalAlignment="Left" Margin="429,264,0,0" VerticalAlignment="Top" Click="button1_Click"/>


    </Grid>
</Window>
